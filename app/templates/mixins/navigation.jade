mixin navigation(meta)  
  .container-fluid(class="new-dark-gray-bg")
    .header-dimmer(class="#{meta.color}-bg")
      .container
        .header
          .logo
            a(href="/"): img(src="/images/iron-yard-logo.svg" style="preserveAspectRatio=MinYMin slice")
          .nav
            .primary-nav
              ul
                li
                  a(href="/courses") Courses
                li 
                  a(href="/locations") Locations
                li 
                  a(href="/stories") Stories
                li 
                  a(href="/accelerator") Ventures

            .secondary-nav
              ul
                li
                  a(href="/about") About
                li
                  a(href="http://blog.theironyard.com") Blog
                li 
                  a(href="/events") Events
                li
                  a.btn.apply-now(href="https://theironyard.typeform.com/to/EcL2Zc") APPLY NOW
                //- li 
                //-   a(href="/jobs") Jobs
                //- li
                //-   a(href="/press") Press
    
    div(class="#{meta.image ? 'image-header' : ''} #{meta.color}-bg #{meta.home ? 'image-header-home' : ''}" style="#{meta.image ? 'background:url('+meta.image+')   no-repeat center/cover transparent; background: #{meta.color}' : ''}#{meta.gradient == false ? 'box-shadow: none;' : ''} margin-left: -15px; margin-right: -15px;")
      .container
        .sub-nav
          .col-xs-12
            if meta.links 
              h2(style="font-size: {meta.font}")= meta.title
              ul
                each link in meta.links
                  li 
                    a(href=link.url)= link.title
            else
              h2(style="margin-bottom: 20px; font-size: #{meta.font}")= meta.title

            if meta.triangle != false  
              if meta.cutout
                .triangle-cutout
              else
                .triangle(class="#{meta.color}-triangle")
