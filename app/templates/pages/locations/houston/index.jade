extends /layouts/main
block content
  +navigation({
    title: 'Houston, TX',
    color: 'green',
    image: '/images/locations/houston/houston.jpg',
    cutout: true,
    links: [
      {title: "What We Offer", url: "#programs  "},
      {title: "Connect", url: "#connect"},
    ]
  })

  .container-fluid(style="padding:0")
    .main
      .container

        .row		
          .col-sm-8
            h1 Coming Soon to Houston!
            p 
              | Houston is home to many amazing enterprise, startup and healthcare software companies. We’re excited to meet the demand for high quality developers that will help businesses across the ecosystem build amazing digital product
          .col-sm-4.mobile-container
            h2 Connect
            hr
            ul.no-style-type
              li: h4
                a.green-text(href="/jobs") We're Hiring in Houston!
              li: a.green-text(href="http://blog.theironyard.com") The Blog
              li: a.green-text(href="mailto:houston@theironyard.com") houston@theironyard.com
              li: a.green-text(href="http://eepurl.com/RByUH") Houston Newsletter
            

      .horizontal-section.gray-light-bg
        .container
            .row
              .col-md-6
                img.photo(src="/images/locations/greenville/greenville-academy.jpg")
              .col-sm-6
                h4 Academy
                p We are actively building our intensive Academy classes in Houston. Sign up for the mailing lists for news and announcements.
                a(href="/academy" class="btn") Learn More
      

      .horizontal-section    
        .container
          .row
            .col-md-6
              img.photo(src="/images/locations/kids-classes.jpg")
            .col-md-6
              h4 Kids Classes
              p 
                | We’ll launch our free code classes for kids later this year. Sign up for the newsletter to be notified when things are ready.
              a(href="/academy#kids").btn(style="text-align:center") Learn More   


      .horizontal-section.gray-light-bg(style="margin:40px 0 0 0")
        .container
          .row
            .col-md-7
              h3(style="margin-top:0") City Highlights
              p  ...
            .col-md-5
              h4 Recent posts from the blog
              ul.no-style-type.recent

block scripts
  +blogFeed('houston')