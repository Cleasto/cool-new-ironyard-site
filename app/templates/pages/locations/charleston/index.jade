extends /layouts/main
block content
  +navigation({
    title: 'Charleston, SC',
    color: 'green',
    image: '/images/locations/charleston/charleston.jpg',
    cutout: true,
    links: [
      {title: "What We Offer", url: "#programs  "},
      {title: "Connect", url: "#connect"},
    ]
  })

  .container-fluid(style="padding:0")
    .main
      .container

        .row(style="margin:20px 0")
          .col-sm-8
            h1 The Iron Yard In Charleston
            p 
              | Long known for welcoming ships carrying goods that would make their way to the rest of our country, Charleston has been a hub of activity since the beginning. Staying true to roots in commerce, the city has transformed itself into a modern-day port for technology companies who build products used all around the world.
              |<br><br>We couldnâ€™t be more excited to jump into an already thriving tech economy and help build it through our code education programs.


          .col-sm-4
            h2 Address
            p(style="font-size:16px; margin-top:3px") The Iron Yard - Charleston <br>
              | 510 Mill Street <br>
              | Mount Pleasant, SC 29464
            a(href="https://www.google.com/maps/dir//510+Mill+St,+Mt+Pleasant,+SC+29464/@32.7930009,-79.8801018,17z/data=!3m1!4b1!4m8!4m7!1m0!1m5!1m1!1s0x88fe70fcdb2e5d7d:0xbc89fd22f08eade6!2m2!1d-79.877956!2d32.7930009" class="btn")
              | Directions  
            

      .horizontal-section.gray-light-bg#programs
        .container
            .row
              .col-md-6
                img.photo(src="/images/locations/greenville/greenville-academy.jpg")
                ul.no-style-type(style="text-align:center; margin-top:12px")
                  li(style="display:inline-block;"): a(href="/academy/front-end-engineering").green-text <img src="/images/locations/icons/js-icon.png" style="height:18px"> <strong>Front End Engineering</strong>
                  li(style="display:inline-block;"): a(href="/academy/rails-engineering").green-text <img src="/images/locations/icons/rails-icon.png" style="height:18px"> <strong>Ruby On Rails</strong>
                  li(style="display:inline-block;"): a(href="/academy/mobile-engineering").green-text  <img src="/images/locations/icons/mobile-icon.png" style="height:18px"> <strong>iOS Development</strong>  
              .col-sm-6
                h4 The Academy
                p We offer all of our intensive Academy courses in Charleston. Our grads get jobs with amazing local companies as well as awesome shops around the country.
                a(href="/academy" class="btn") Learn More

      .horizontal-section
        .container
          .row
            .col-md-6
              img.photo(src="/images/locations/kids-classes.jpg")
            .col-sm-6
              h4 Kids Classes
              p 
                | We will launch kids classes in Charleston in Spring 2014. <a class="green-text" href="http://eepurl.com/Me4Fr">Sign up for our mailing list to learn more.</a>
              a(href="/academy" class="btn") Learn More
      
      .container  
        .row
          .col-sm-7.mobile-container
            h2 Meet Our Charleston Team
            .row.left-column
              .photo-list
                .photo-container
                  a(href="/about/team#sally"): img.photo-mentor(src="/images/about/sally-kingston.jpg")
                h3 Sally Kingston
                h4 Campus Director
              .photo-list
                .photo-container
                  a(href="/about/team#nick"): img.photo-mentor(src="/images/about/team-nick.jpg")
                h3 Nick Bucciarelli
                h4 Ruby Instructor
              .photo-list
                .photo-container
                  a(href="/about/team#calvin"): img.photo-mentor(src="/images/about/team-calvin.jpg")
                h3 Calvin Webster
                h4 JavaScript Instructor  

          .col-sm-5.mobile-container#connect
            h2 Connect
            hr
            ul.no-style-type
              li: h4
                a.green-text(href="/jobs") We're Hiring!
              li: a.green-text(href="http://Charleston.theironyard.com") The Blog
              li: a.green-text(href="https://twitter.com/search?q=%23tiyCharleston&src=typd") #tiyCharleston
              li: a.green-text(href="mailto:Charleston@theironyard.com") Charleston@theironyard.com

            img.photo-medium(src="/images/locations/charleston/charleston-city1.jpg")
            img.photo-medium(src="/images/locations/charleston/charleston-city2.jpg")
            img.photo-medium(src="/images/locations/charleston/charleston-city3.jpg")


      .horizontal-section.gray-light-bg(style="margin:40px 0 0 0")
        .container
          .row
            .col-md-7
              h3(style="margin-top:0") City Highlights
              p  Someone needs to write something here.
            .col-md-5
              h4 Recent posts from the blog
              ul.no-style-type.recent

block scripts
  +blogFeed('charleston')
